<odoo>
    <!-- Definición de datos (views, acciones, etc.) dentro de un solo bloque <data> -->
    <data>
        <!-- Vista de formulario para el análisis de eye-tracking -->
        <record id="view_eyetracking_analysis_form" model="ir.ui.view">
            <field name="name">eyetracking.analysis.form</field>
            <field name="model">eyetracking.analysis</field>
            <field name="arch" type="xml">
                <form string="Eye Tracking Analysis">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_open_webcam" string="Open Webcam" type="object" class="btn-primary"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Acción para abrir el formulario -->
        <record id="action_eyetracking_analysis" model="ir.actions.act_window">
            <field name="name">Eye Tracking Analysis</field>
            <field name="res_model">eyetracking.analysis</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_eyetracking_analysis_form"/>
            <field name="target">new</field>
        </record>

        <!-- Menú para acceder a la acción -->
        <menuitem id="menu_eyetracking_analysis" name="Eye Tracking Analysis" parent="base.menu_administration" action="action_eyetracking_analysis"/>

        <!-- Inclusión del archivo JavaScript -->
        <xpath expr="." position="inside">
            <script type="module" src="/marketing_eyetracking/static/src/js/webcam_dialog.js"/>
        </xpath>
    </data>
</odoo>
